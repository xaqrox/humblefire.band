    #top
    .hero
      .hero-logo
        include ../assets/img/logo.svg
      .hero-image
        img(
          src="img/humble-fire-roof.jpg",
          alt="Humble Fire looking sassy on a rooftop with a beautiful blue sky behind them"
        )
      .hero-content
