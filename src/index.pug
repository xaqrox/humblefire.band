                +nav-item('#video', 'Video')
                +nav-item('#shows', 'Shows')
                +nav-item('#press', 'Press')
                +nav-item('#bio', 'Bio')
                +nav-item('https://humblefire.bandcamp.com/merch', 'Store')(target='_blank')
